<?xml version="1.0" encoding="utf-8"?><!-- 底部音乐播放导航栏布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_bottom_nav_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bottom_navigation_albumImg"
        android:layout_width="@dimen/layout_60_dp"
        android:layout_height="@dimen/layout_60_dp"
        android:layout_margin="@dimen/layout_8_dp"
        android:src="@drawable/default_album" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/layout_6_dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottom_navigation_songNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/layout_18_sp"
            tools:text="歌曲名称" />

        <TextView
            android:id="@+id/bottom_navigation_artistNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_8_dp"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="@dimen/layout_14_sp"
            tools:text="歌手名称" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bottom_navigation_playImg"
        android:layout_width="@dimen/layout_35_dp"
        android:layout_height="@dimen/layout_35_dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/layout_8_dp"
        android:src="@drawable/icon_music_play" />

    <ImageView
        android:id="@+id/bottom_navigation_playListImg"
        android:layout_width="@dimen/layout_35_dp"
        android:layout_height="@dimen/layout_35_dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/layout_12_dp"
        android:src="@drawable/icon_play_list" />
</LinearLayout>